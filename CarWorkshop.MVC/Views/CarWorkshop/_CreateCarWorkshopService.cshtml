@model CarWorkshopMVC.Application.CarWorkshopService.Commands.CreateCarWorkshopServiceCommand

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCarWorkshopModel">
    Add Car Wokrshop service
</button>

<!-- Modal -->
<div class="modal fade" id="createCarWorkshopModel" tabindex="-1" aria-labelledby="createCarWorkshopModelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateCarWorkshopService" >
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="createCarWorkshopModelLabel">Create Services</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <input asp-for="CarWorkshopEncodedName" class="form-control" type="hidden" />

                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cost" class="control-label"></label>
                    <input asp-for="Cost" class="form-control" />
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" value="create" class="btn btn-primary">Save changes</button>
            </div>
            </form>
        </div>
    </div>
</div>



<hr />


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
